<Window x:Class="bArt_Solutions_Test_Task.Add_Account_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bArt_Solutions_Test_Task"
        mc:Ignorable="d"
        Title="Add_Account_Window" Height="119" Width="225">
    <Grid>
        <TextBox x:Name="AccountName" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Foreground="Gray" Text="Account Name" VerticalAlignment="Top" Width="184" GotFocus="TextBox_GotFocusAccountName" LostFocus="AcountName_LostFocusAccountName"/>
        <TextBox x:Name="IncindentId" PreviewTextInput = "NumberValidationTextBox" HorizontalAlignment="Left" Margin="10,33,0,0" TextWrapping="Wrap" Foreground="Gray" Text="Incendent Id" VerticalAlignment="Top" Width="184" GotFocus="IncindentId_GotFocus" LostFocus="IncindentId_LostFocus"/>
        <Button Content="Add Account" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" Width="184" Click="Button_Click"/>

    </Grid>
</Window>
